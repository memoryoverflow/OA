<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yj.oa.project.mapper.PositionMapper">
    <resultMap id="BaseResultMap" type="com.yj.oa.project.po.Position">
        <id column="positionId" property="positionId" jdbcType="INTEGER"/>
        <result column="positionName" property="positionName" jdbcType="VARCHAR"/>
        <result column="descr" property="descr" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="createTime" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <sql id="Base_Column_List">
    positionId, positionName,descr, status, createTime
  </sql>

    <!--根据主键查询-->
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from t_position
        where positionId = #{positionId,jdbcType=INTEGER}
    </select>

    <!--根据用户个字段查询-->
    <select id="selectPositionList" parameterType="com.yj.oa.project.po.Position" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_position
        <where>
            <if test="positionId !=null and positionId!=''">
                and positionId=#{positionId}
            </if>
            <if test="positionName !=null and positionName!=''">
                and positionName like concat('%',#{positionName},'%')
            </if>
            <if test="status !=null and status!='' or status==0">
                and status=#{status}
            </if>
            <if test="beginTime !=null">
                <![CDATA[   and DATE_FORMAT(createTime, '%Y-%m-%d')>=  DATE_FORMAT(#{beginTime}, '%Y-%m-%d')   ]]>
            </if>
            <if test="overTime !=null">
                <![CDATA[  and DATE_FORMAT(createTime, '%Y-%m-%d') <= DATE_FORMAT(#{overTime}, '%Y-%m-%d')    ]]>
            </if>
        </where>
    </select>

    <!--根据Id批量删除-->
    <delete id="deleteByPrimaryKeys" parameterType="java.lang.Integer">
    delete from t_position
    where positionId IN
    <foreach collection="array" separator="," item="id">
        (#{id,jdbcType=INTEGER})
    </foreach>

  </delete>

    <!--检验名称唯一性-->
    <select id="checkPositionNameUnique" parameterType="Position" resultMap="BaseResultMap">
        select *
        from t_position
        <where>
            and positionName=#{positionName}
        </where>
    </select>


    <!--插入-->
    <insert id="insertSelective" parameterType="com.yj.oa.project.po.Position">
        insert into t_position
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="positionName != null">
                positionName,
            </if>
            <if test="descr != null">
                descr,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="createTime != null">
                createTime,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="positionName != null">
                #{positionName,jdbcType=VARCHAR},
            </if>
            <if test="descr != null">
                #{descr,jdbcType=VARCHAR},
            </if>
            <if test="status != null">
                #{status,jdbcType=INTEGER},
            </if>
            <if test="createTime != null">
                #{createTime,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>


    <!--修改-->
    <update id="updateByPrimaryKeySelective" parameterType="com.yj.oa.project.po.Position">
        update t_position
        <set>
            <if test="positionName != null">
                positionName = #{positionName,jdbcType=VARCHAR},
            </if>
            <if test="descr != null">
                descr = #{descr,jdbcType=VARCHAR},
            </if>
            <if test="status != null">
                status = #{status,jdbcType=INTEGER},
            </if>
        </set>
        where positionId = #{positionId,jdbcType=INTEGER}
    </update>
</mapper>